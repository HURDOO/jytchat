<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kr.kro.hurdoo.jytchat.ui.MainController">
   <left>
      <VBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="thumbnail" fitHeight="135.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true" />
            <HBox>
               <children>
                  <TextField fx:id="idField" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <ToggleSwitch fx:id="toggleChat" prefWidth="28.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <children>
                  <ToggleSwitch fx:id="toggleChatSave" disable="true" nodeOrientation="LEFT_TO_RIGHT" text="채팅 저장">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </ToggleSwitch>
                  <TextField disable="true" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <ToggleSwitch fx:id="toggleChatCheck" disable="true" text="채팅 출석체크" />
                  <TextField disable="true">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </VBox>
            <VBox>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <children>
                  <ToggleSwitch fx:id="toggleChatBot" disable="true" text="챗봇 연동" />
                  <TextArea fx:id="sendChatText" disable="true" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ChoiceBox fx:id="chatPermission" disable="true" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendChatButton" disable="true" mnemonicParsing="false" text="채팅 전송" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <ScrollPane fx:id="chatScroll" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <TextFlow fx:id="chatBox" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
